<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/loginimage"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="52dp"
        android:src="@drawable/loginimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ImageView>

    <EditText
        android:id="@+id/emailedittext"
        app:layout_constraintTop_toBottomOf="@id/loginimage"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColorHint="#686868"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Email"
        android:textSize="@dimen/_15sdp"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/edittextbackground"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:layout_height="@dimen/_50sdp">


    </EditText>

    <EditText
        android:id="@+id/passwordedittext"
        app:layout_constraintTop_toBottomOf="@id/emailedittext"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColorHint="#686868"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/white"
        android:hint="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_15sdp"
        android:inputType="textPassword"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/edittextbackground"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:layout_height="@dimen/_50sdp">


    </EditText>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF2525"
        android:text="Login"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordedittext">

    </Button>

    <TextView
        android:id="@+id/ortextview"
        app:layout_constraintTop_toBottomOf="@id/loginbutton"
        android:layout_marginTop="@dimen/_23sdp"
        android:text="OR"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </TextView>

    <ImageView
        android:id="@+id/signinwithgoogleimage"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/googlelogin1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ortextview"
        app:layout_constraintVertical_bias="0.026">


    </ImageView>

    <TextView
        android:id="@+id/signupdirecttextview"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/signinwithgoogleimage"
        android:text="Don't Have Account ? SIGN UP"
        android:textSize="@dimen/_16sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">


    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>