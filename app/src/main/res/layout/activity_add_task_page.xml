<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddTaskPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addtasktextview"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_46sdp"
                android:text="Add Task "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_height="wrap_content">


            </TextView>

            <EditText
                android:id="@+id/tasknameedittext"
                app:layout_constraintTop_toBottomOf="@id/addtasktextview"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textColorHint="#686868"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Task Name"
                android:textSize="@dimen/_15sdp"
                android:inputType="text"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/edittextbackground"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:layout_height="@dimen/_50sdp">
            </EditText>

            <EditText
                android:id="@+id/descriptionedittext"
                app:layout_constraintTop_toBottomOf="@id/tasknameedittext"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColorHint="#686868"
                android:hint="Task Description"
                android:textSize="@dimen/_15sdp"
                android:inputType="text"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/edittextbackground"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:layout_height="@dimen/_50sdp">
            </EditText>

            <EditText
                android:id="@+id/dateedittext"
                app:layout_constraintTop_toBottomOf="@id/descriptionedittext"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Date: 09/06/2003"
                android:textColorHint="#686868"
                android:textSize="@dimen/_15sdp"
                android:inputType="date"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/edittextbackground"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:layout_height="@dimen/_50sdp">
            </EditText>

            <EditText
                android:id="@+id/priorityedittext"
                app:layout_constraintTop_toBottomOf="@id/dateedittext"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Priority: High, Medium, Low"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#686868"

                android:inputType="text"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/edittextbackground"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:layout_height="@dimen/_50sdp">
            </EditText>

            <EditText
                android:id="@+id/statusedittext"
                app:layout_constraintTop_toBottomOf="@id/priorityedittext"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Status: not started, in progress, completed"
                android:textSize="@dimen/_15sdp"
                android:inputType="text"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textColorHint="#686868"
                android:background="@drawable/edittextbackground"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:layout_height="@dimen/_50sdp">
            </EditText>

            <Button
                android:id="@+id/createtaskbutton"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_36sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="Create task"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusedittext"
                app:layout_constraintVertical_bias="0.0">


            </Button>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>















</LinearLayout>